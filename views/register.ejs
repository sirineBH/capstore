<%- include('parts/header') %>

    <div class="container d-flex justify-content-center" style="  padding-top: 100px;">
        <form method="POST" action="/register">
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label" name="fname">First name</label>
                        <input type="text" name="fname" class="form-control" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label" name="lname">Last name</label>
                        <input type="text" name="lname" class="form-control" />
                    </div>
                </div>
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
                <label class="form-label" name="email">Email address</label>
                <input type="email" name="email" class="form-control" />
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label" name="login">Password</label>
                <input type="password" name="login" class="form-control" />
            </div>

            <% if(message){ %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
                <% } %>
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-4">Sign up</button>

        </form>
    </div>
    <%- include("parts/footer") %>